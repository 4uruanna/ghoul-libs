{
  "name": "ghoul-libs",
  "version": "0.0.0",
  "scripts": {
    "lint": "ng lint --fix",
    "components:dev": "nodemon --config nodemon.components.json",
    "components:build": "npm run components:build:tailwind && ng build ghoul-components",
    "components:release": "npm run lint && npm run components:build && cd dist/ghoul-components && npm publish",
    "components:package": "cd dist/ghoul-components && npm pack",
    "components:build:tailwind": "npx @tailwindcss/cli --cwd ./projects/ghoul-components/src -i style.scss -o style.css --minify"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@tailwindcss/cli": "^4.1.13",
    "rxjs": "~7.8.0",
    "tailwindcss": "^4.1.13",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.3",
    "@angular/cli": "^20.3.3",
    "@angular/compiler-cli": "^20.3.0",
    "@types/jasmine": "~5.1.0",
    "angular-eslint": "20.3.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^20.3.0",
    "nodemon": "^3.1.10",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.40.0"
  }
}
